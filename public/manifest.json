{
  "manifest_version": 3,
  "name": "Toss To Translator",
  "version": "0.9.1",
  "description": "Toss selected text to the Translator Website on New Tab",
  "icons": {
    "16": "icons/TTT-16.png",
    "32": "icons/TTT-32.png",
    "48": "icons/TTT-48.png",
    "128": "icons/TTT-128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "TTT",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "contextMenus"]
}
