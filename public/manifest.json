{
  "manifest_version": 3,
  "name": "TTT",
  "version": "0.9.0",
  "description": "Toss To Translator. Toss selected text to the Translator Web Site on the New Tab",
  "icons": {
    "16": "icons/TTT-16.png",
    "32": "icons/TTT-32.png",
    "48": "icons/TTT-48.png",
    "128": "icons/TTT-128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "TTT",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "contextMenus", "tabs"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "js": ["contentScript.js"]
    }
  ]
}
